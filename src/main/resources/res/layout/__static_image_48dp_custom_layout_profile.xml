<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_gravity="center_horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/cl_image_padding">
    <ImageView
        android:layout_gravity="center_horizontal"
        android:id="@+id/image"
        android:layout_width="@dimen/cl_image_size_a12"
        android:layout_height="@dimen/cl_image_size_a12"
        android:shape="oval"
        android:layout_marginStart="@dimen/cl_image_ring"/>
    <ImageView
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/cl_image_ring"/>
</FrameLayout>
